  --bg-primary: rgba(30, 20, 50, 0.95);
  --bg-secondary: rgba(25, 15, 45, 0.98);
  --border-primary: rgba(168, 85, 247, 0.3);
  --shadow-primary: 0 8px 32px rgba(168, 85, 247, 0.2);
  --chart-grid: rgba(168, 85, 247, 0.1);
}

