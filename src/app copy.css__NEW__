/* üé® CSS VARIABLES - Pridaj do app.css */
/* ===================================== */

:root {
  /* === THEME 1: CYBERPUNK TEAL (Default) === */
  --primary-color: #00ffff;
  --secondary-color: #00c8ff;
  --accent-color: #00ff96;
  --gradient-1: linear-gradient(135deg, #00ffff 0%, #00c8ff 50%, #00ff96 100%);
  --gradient-2: linear-gradient(145deg, rgba(0, 255, 255, 0.1) 0%, rgba(0, 200, 255, 0.05) 100%);
  
  /* Background colors */
  --bg-primary: rgba(26, 35, 50, 0.95);
  --bg-secondary: rgba(20, 28, 40, 0.98);
  --bg-glass: rgba(255, 255, 255, 0.1);
  --bg-glass-hover: rgba(255, 255, 255, 0.2);
  
  /* Text colors */
  --text-primary: #ffffff;
  --text-secondary: #8892b0;
  --text-muted: #666;
  
  /* Border & shadow */
  --border-primary: rgba(0, 255, 255, 0.3);
  --border-secondary: rgba(255, 255, 255, 0.2);
  --shadow-primary: 0 8px 32px rgba(0, 255, 255, 0.2);
  --shadow-hover: 0 12px 48px rgba(0, 255, 255, 0.3);
  
  /* Chart specific */
  --chart-bg: linear-gradient(145deg, rgba(26, 35, 50, 0.8) 0%, rgba(20, 28, 40, 0.9) 100%);
  --chart-grid: rgba(0, 255, 255, 0.1);
}

/* === ALTERNATIVE THEMES === */
