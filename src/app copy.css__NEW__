/* Existuj√∫ce weather-display */
.weather-display {
  background: var(--bg-primary);
  backdrop-filter: blur(30px);
  border: 1px solid var(--border-primary);
  box-shadow: var(--shadow-primary);
  color: var(--text-primary);
}

.weather-display:hover {
  box-shadow: var(--shadow-hover);
  border-color: var(--primary-color);
}

/* Weather temperature */
.weather-temp {
  background: var(--gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 0 20px var(--primary-color);
}

/* Weather details */
.weather-detail {
  background: var(--gradient-2);
  border: 1px solid var(--border-primary);
}

.weather-detail:hover {
  border-color: var(--primary-color);
}

/* Buttons */
.expand-btn {
  background: var(--gradient-2);
  border: 1px solid var(--border-primary);
  color: var(--primary-color);
  box-shadow: var(--shadow-primary);
}

.expand-btn:hover {
  background: var(--bg-glass-hover);
  border-color: var(--primary-color);
  box-shadow: var(--shadow-hover);
}

/* MapTiler buttons */
#buttons button {
  background: var(--bg-glass);
  border: 1px solid var(--border-secondary);
  color: var(--text-primary);
}

#buttons button:hover {
  background: var(--bg-glass-hover);
  border-color: var(--border-primary);
  box-shadow: var(--shadow-primary);
}

/* Search input */
#maptiler-search input {
  background: var(--bg-glass);
  border: 1px solid var(--border-secondary);
  color: var(--text-primary);
}

#maptiler-search input:focus {
  border-color: var(--border-primary);
  box-shadow: var(--shadow-primary);
}

/* Timebar */
.timebar {
  background: var(--bg-primary);
  border: 1px solid var(--border-secondary);
  box-shadow: var(--shadow-primary);
}

.timebar button {
  background: var(--gradient-1);
  box-shadow: var(--shadow-primary);
}

.timebar button:hover {
  box-shadow: var(--shadow-hover);
}

/* Detail panels */
.weather-detail-overlay {
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, var(--bg-primary) 100%);
}

.weather-detail-panel {
  background: var(--bg-primary);
  border: 1px solid var(--border-primary);
  box-shadow: var(--shadow-hover);
}

.chart-container {
  background: var(--chart-bg);
  border: 1px solid var(--border-primary);
}

.chart-container:hover {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-hover);
}

/* Chart headers */
.chart-section h4 {
  background: var(--gradient-2);
  border-left: 4px solid var(--primary-color);
  color: var(--text-primary);
}

/* Hourly cards */
.hourly-card {
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  box-shadow: var(--shadow-primary);
}

.hourly-card:hover {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-hover);
}

.hour-temp {
  background: var(--gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Forecast items */
.forecast-item {
  background: var(--gradient-2);
  border-left: 3px solid var(--primary-color);
}

.forecast-item:hover {
  border-left-color: var(--accent-color);
}

/* Legend control */
.maptiler-control.legend {
  background: var(--bg-glass);
  border: 1px solid var(--border-secondary);
  box-shadow: var(--shadow-primary);
  color: var(--text-primary);
}

/* Pointer data */
#pointer-data {
  background: var(--bg-primary);
  border: 1px solid var(--border-primary);
  color: var(--text-primary);
  box-shadow: var(--shadow-primary);
}