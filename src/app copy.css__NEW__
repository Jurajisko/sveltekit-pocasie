/* MAPA Z√ÅKLADN√â PRAVIDL√Å */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: "SF Pro Display", -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
  color: var(--text-primary);
  min-height: 100vh;
  transition: all 0.3s ease;
}

 /* === MAPA CSS === */

#map {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100vh;
}

/* TIME SLIDER WRAPPER */
.time-slider-wrapper {
  position: absolute;
  bottom: 80px;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  max-width: 800px;
  z-index: 20;
  background: var(--bg-primary);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  padding: 20px;
  border: 1px solid var(--border-secondary);
  box-shadow: var(--shadow-primary);
  box-sizing: border-box;
}

/* SEARCH IKONA */
#maptiler-search > div {
  position: relative;
}

#maptiler-search > div::before {
  content: "üîç";
  position: absolute;
  left: 18px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
  font-size: 16px;
  pointer-events: none;
}

/* AUTOCOMPLETE DROPDOWN */
.autocomplete-list {
  list-style: none;
  padding: 0;
  margin: 0;
  background: var(--bg-glass);
  backdrop-filter: blur(20px);
  border-radius: 0 0 16px 16px;
  box-shadow: var(--shadow-primary);
  max-height: 300px;
  overflow-y: auto;
  border-top: 1px solid var(--border-secondary);
  margin-top: 2px;
}

.autocomplete-list li {
  padding: 12px 20px;
  color: var(--text-primary);
  cursor: pointer;
  transition: background-color 0.2s ease;
  border-bottom: 1px solid var(--border-secondary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 14px;
}

.autocomplete-list li:hover {
  background: var(--bg-glass-hover);
}

.autocomplete-list li:last-child {
  border-bottom: none;
}

/* WEATHER HEADER FLEX */
.weather-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16px;
}

.weather-header-right {
  display: flex;
  align-items: center;
  gap: 12px;
}

.weather-location {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.weather-icon {
  font-size: 32px;
  filter: drop-shadow(0 0 10px var(--primary-color));
  animation: iconFloat 3s ease-in-out infinite;
}

@keyframes iconFloat {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

.weather-description {
  color: var(--text-secondary);
  font-size: 14px;
  margin-bottom: 20px;
}

.weather-details {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
  margin-bottom: 20px;
}

.weather-detail-icon {
  font-size: 16px;
}

/* FORECAST SECTION */
.forecast-section {
  margin-top: 20px;
  padding-top: 16px;
  border-top: 1px solid var(--border-secondary);
}

.forecast-title {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 12px;
  color: var(--text-primary);
}

.forecast-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 12px;
  margin: 4px 0;
  background: var(--gradient-2);
  border-radius: 12px;
  border-left: 3px solid var(--primary-color);
  transition: all 0.3s ease;
}

.forecast-item:hover {
  transform: translateX(8px);
  border-left-color: var(--accent-color);
}

.forecast-day {
  font-size: 14px;
  color: var(--text-secondary);
  min-width: 60px;
}

.forecast-temps {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
}

.forecast-temp-max {
  font-weight: 600;
  color: var(--text-primary);
}

.forecast-temp-min {
  color: var(--text-muted);
}

/* DETAIL PANEL KOMPONENTY */
.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40px;
  padding: 24px;
  background: var(--gradient-2);
  border-radius: 16px;
  border: 1px solid var(--border-primary);
  position: relative;
  overflow: hidden;
}

.detail-header h3 {
  margin: 0;
  font-size: 26px;
  font-weight: 800;
  background: var(--gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.5px;
}

.close-btn {
  background: var(--gradient-2);
  border: 1px solid var(--border-primary);
  font-size: 18px;
  color: var(--primary-color);
  cursor: pointer;
  padding: 12px;
  border-radius: 50%;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-primary);
}

.close-btn:hover {
  background: var(--bg-glass-hover);
  border-color: var(--primary-color);
  transform: scale(1.1) rotate(90deg);
  box-shadow: var(--shadow-hover);
}

/* CHART SECTIONS */
.chart-section {
  margin-bottom: 32px;
}

.chart-section h4 {
  margin: 0 0 24px 0;
  font-size: 18px;
  font-weight: 700;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 16px 24px;
  background: var(--gradient-2);
  border-radius: 16px;
  border-left: 4px solid var(--primary-color);
  box-shadow: var(--shadow-primary);
  transition: all 0.3s ease;
}

.chart-section h4:hover {
  transform: translateX(4px);
  box-shadow: var(--shadow-hover);
  border-left-color: var(--accent-color);
}

/* CANVAS RENDERING */
.chart-container canvas {
  image-rendering: -webkit-optimize-contrast;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
  image-rendering: pixelated;
  width: 100% !important;
  height: 160px !important;
  max-width: 400px;
  transform: translateZ(0);
  backface-visibility: hidden;
}

.chart-container canvas {
  border-radius: 12px;
  background: transparent;
  filter: contrast(1.1) brightness(1.05);
}

/* HOURLY FORECAST */
.hourly-section {
  margin-bottom: 48px;
  animation: slideInUp 0.6s ease-out 0.4s backwards;
}

.hourly-section h4 {
  margin: 0 0 24px 0;
  font-size: 18px;
  font-weight: 700;
  color: var(--text-primary);
  padding: 16px 24px;
  background: var(--gradient-2);
  border-radius: 16px;
  border-left: 4px solid var(--accent-color);
  box-shadow: var(--shadow-primary);
}

.hourly-slider-container {
  background: var(--chart-bg);
  border-radius: 20px;
  padding: 24px;
  border: 1px solid var(--border-primary);
  box-shadow: var(--shadow-primary);
  position: relative;
  overflow: hidden;
}

.hourly-slider {
  display: flex;
  gap: 16px;
  overflow-x: auto;
  overflow-y: hidden;
  padding: 8px 4px 16px 4px;
  scroll-behavior: smooth;
  scrollbar-width: thin;
  scrollbar-color: var(--primary-color) var(--bg-secondary);
}

.hourly-slider::-webkit-scrollbar {
  height: 6px;
}

.hourly-slider::-webkit-scrollbar-track {
  background: var(--bg-secondary);
  border-radius: 3px;
}

.hourly-slider::-webkit-scrollbar-thumb {
  background: var(--gradient-1);
  border-radius: 3px;
  box-shadow: 0 0 8px var(--primary-color);
}

.hourly-card {
  flex: 0 0 auto;
  width: 80px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 16px 12px 20px 12px;
  background: var(--bg-secondary);
  border-radius: 16px;
  border: 1px solid var(--border-primary);
  box-shadow: var(--shadow-primary);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.hourly-card:hover {
  transform: translateY(-8px) scale(1.05);
  border-color: var(--primary-color);
  box-shadow: var(--shadow-hover);
}

.hour-time {
  color: var(--text-secondary);
  font-weight: 700;
  font-size: 12px;
  letter-spacing: 0.5px;
  margin-bottom: 4px;
}

.hour-icon {
  font-size: 24px;
  filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.3));
  transition: all 0.3s ease;
  margin-bottom: 4px;
}

.hourly-card:hover .hour-icon {
  transform: scale(1.2);
  filter: drop-shadow(0 0 15px var(--primary-color));
}

.hour-temp {
  color: var(--text-primary);
  font-weight: 800;
  font-size: 16px;
  background: var(--gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 2px;
}

.hour-wind {
  color: var(--text-secondary);
  font-size: 10px;
  font-weight: 600;
  margin-bottom: 2px;
}

.hour-precip {
  color: var(--secondary-color);
  font-size: 10px;
  font-weight: 600;
}

/* STATS SECTION */
.stats-section {
  margin-top: 32px;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
}

.stat-item {
  background: var(--bg-secondary);
  border: 1px solid var(--border-primary);
  color: var(--text-primary);
  box-shadow: var(--shadow-primary);
  padding: 20px;
  border-radius: 16px;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-item:hover {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-hover);
  transform: translateY(-4px) scale(1.02);
}

.stat-label {
  color: var(--text-secondary);
  font-size: 13px;
  font-weight: 600;
  margin-bottom: 12px;
  text-transform: uppercase;
  letter-spacing: 0.8px;
}

.stat-value {
  color: var(--text-primary);
  font-size: 28px;
  font-weight: 800;
  background: var(--gradient-1);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  transition: all 0.3s ease;
}

/* MAP LOGO SKRYTIE */
.maplibregl-ctrl-bottom-left a[href*="maptiler.com"],
.maplibregl-ctrl-bottom-left .maplibregl-ctrl {
  display: none !important;
}

/* WEATHER POPUP STYLING */
:global(.weather-popup .maplibregl-popup-content) {
  border-radius: 16px !important;
  box-shadow: var(--shadow-primary) !important;
  border: 1px solid var(--border-secondary) !important;
  backdrop-filter: blur(20px);
  padding: 16px !important;
  background: var(--bg-glass) !important;
}

:global(.weather-popup .maplibregl-popup-tip) {
  border-top-color: var(--bg-glass) !important;
}

:global(.weather-popup .maplibregl-popup-close-button) {
  font-size: 16px !important;
  padding: 4px 8px !important;
  color: var(--text-secondary) !important;
  right: 8px !important;
  top: 8px !important;
}

